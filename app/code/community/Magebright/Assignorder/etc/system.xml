<?xml version="1.0"?>
<config>
    <tabs>
        <magebright translate="label" module="assignorder">
            <label>Magebright Extensions</label>
            <sort_order>101</sort_order>
        </magebright>
    </tabs>
    <sections>
        <assignorder translate="label" module="assignorder">
            <tab>magebright</tab>
            <label>Assign Order To Customers</label>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <assignorder_settings translate="label">
                    <label>Assign Order To Customers Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>			
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>				
                        </enabled>
                        <notification_from_email>
                            <label>Sender Address</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_from_email>
                        <notification_to_email>
                            <label>Recipient Address</label>
                            <comment>send email to a specific user</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_to_email>
                        <email_notification_template translate="label">
                            <label>Assign Order Notification Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_notification_template>
                    </fields>
                </assignorder_settings>
            </groups>
        </assignorder>
    </sections>
</config>