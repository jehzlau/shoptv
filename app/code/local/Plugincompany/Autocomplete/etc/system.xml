<?xml version="1.0"?>
<config>
    <tabs>
        <plugincompany translate="label" module="plugincompany_autocomplete">
            <label>Plugin Company</label>
            <sort_order>20000</sort_order>
        </plugincompany>
    </tabs>
    <sections>
        <plugincompany_autocomplete translate="label" module="plugincompany_autocomplete">
            <label>Search Autocomplete</label>
            <tab>plugincompany</tab>
            <sort_order>121</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>Autocomplete Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enable translate="label">
                            <label>Enable Search Autocomplete</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <jquery translate="label">
                            <label>Include jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select 'No' if your front-end theme already includes jQuery.</comment>
                        </jquery>
                        <search_display translate="label">
                            <label>Search Field Display</label>
                            <frontend_type>select</frontend_type>
                            <source_model>plugincompany_autocomplete/source_display</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The display type of the search field. If 'auto' causes display issues on the front-end, try the other options.</comment>
                        </search_display>
                        <increasewidth translate="label">
                            <label>Search Field Expansion</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The percentage by which the search field should expand when clicked/focused on. (Not compatible with some themes.)</comment>
                            <validate>validate-number required-entry</validate>
                        </increasewidth>
                        <theme translate="label">
                            <label>Autocomplete Design</label>
                            <frontend_type>select</frontend_type>
                            <source_model>plugincompany_autocomplete/source_theme</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The design used for the search suggestion drop-down.</comment>
                        </theme>
                        <imagetype translate="label">
                            <label>Image Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>plugincompany_autocomplete/source_Imagetype</source_model>
                            <sort_order>41</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The preferred product image type to be shown in the search results. If the selected image type is not found, an available image type will be automatically used.</comment>
                        </imagetype>
                        <imagesize translate="label">
                            <label>Thumbnail Size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The size in px of the product image thumbnails shown in the search results.</comment>
                            <validate>validate-number required-entry</validate>
                        </imagesize>
                    </fields>
                </general>
            </groups>
        </plugincompany_autocomplete>
    </sections>
</config>
